#!/usr/bin/env ruby

require 'thin'

dirname = File.dirname(__FILE__)
env_key = dirname.split(File::SEPARATOR).last.upcase

config_ru = File.expand_path(File.join(dirname, '..', 'config.ru'))

ENV["#{@env_key}_WIKI_PATH"] ||= '.'

ARGV.unshift config_ru
ARGV.unshift '-R'
ARGV.unshift 'start'
Thin::Runner.new(ARGV).run!
